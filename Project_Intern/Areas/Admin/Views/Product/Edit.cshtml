@model Project_Intern.Models.products
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLTE.cshtml";
} 
tiêu đề @Model.product_name
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Product</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form>
        <div class="card-body">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <div class="form-group">
                <label for="product_name">Tên Sản Phẩm</label>
                <input type="text" class="form-control" id="product_name" value="@Model.product_name" placeholder="Nhập Tên Sản Phẩm">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Số Lượng</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập số lượng sản phẩm">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Phân Loại</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Phân Loại sản phẩm">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Xuất Kho</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Ngày Xuất Kho">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Hết Hạn</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Ngày Hết Hạn">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Thành Tiền</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Giá">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Miêu Tả</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Miêu Tả Ngắn ">
            </div>
            <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false"></button>
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
